---
import HeaderLink from './HeaderLink.astro';
import { SITE_DATA } from '../consts';
---

<header>
	<nav>
		<div class="logo">
			<img src="/logo.png" alt="Ash & Elm Contracting" class="logo-image" />
			<h2><a href="/">{SITE_DATA.name}</a></h2>
		</div>
		<div class="mobile-menu-toggle" id="mobile-menu-toggle" aria-label="Toggle menu">
			<span></span>
			<span></span>
			<span></span>
		</div>
		<div class="internal-links" id="menu-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/services">Services</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
			<div class="cta-buttons">
				<a href={`tel:${SITE_DATA.phone.raw}`} class="cta-call">Call {SITE_DATA.phone.display}</a>
				<a href="/contact#quote" class="cta-quote">Request Quote</a>
			</div>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top: 0;
		z-index: 100;
	}
	
	.logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.logo-image {
		height: 40px;
		width: auto;
	}

	h2 {
		margin: 0;
		font-size: 1.6em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--primary);
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1rem 0;
		max-width: 1080px;
		margin: 0 auto;
	}
	
	.internal-links {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.cta-buttons {
		display: flex;
		gap: 0.5rem;
		margin-left: 1rem;
	}

	.cta-call {
		padding: 0.5rem 1rem !important;
		background: var(--green-700);
		color: white !important;
		border-radius: 6px;
		font-weight: 600;
		font-size: 0.9rem;
	}

	.cta-call:hover {
		background: var(--green-800) !important;
	}

	.cta-quote {
		padding: 0.5rem 1rem !important;
		border: 2px solid var(--green-700);
		color: var(--green-700) !important;
		border-radius: 6px;
		font-weight: 600;
		font-size: 0.9rem;
	}

	.cta-quote:hover {
		background: var(--green-700) !important;
		color: white !important;
	}
	
	nav a {
		padding: 0.5em 0.8em;
		color: var(--black);
		border-radius: 4px;
		text-decoration: none;
		font-weight: 500;
		transition: background-color 0.2s ease;
	}
	
	nav a:hover {
		background-color: rgba(var(--gray-light), 0.7);
		text-decoration: none;
	}
	
	nav a.active {
		color: var(--primary);
		font-weight: bold;
	}
	
	.mobile-menu-toggle {
		display: none;
		flex-direction: column;
		justify-content: space-between;
		width: 30px;
		height: 21px;
		cursor: pointer;
	}
	
	.mobile-menu-toggle span {
		display: block;
		height: 3px;
		width: 100%;
		background-color: var(--primary);
		border-radius: 3px;
		transition: all 0.3s ease;
	}
	
	@media (max-width: 720px) {
		.mobile-menu-toggle {
			display: flex;
		}
		
		.internal-links {
			flex-direction: column;
			position: absolute;
			top: 100%;
			right: 0;
			left: 0;
			background: white;
			box-shadow: 0 2px 8px rgba(var(--black), 5%);
			padding: 0;
			display: none;
			width: 100%;
			z-index: 100;
		}

		.cta-buttons {
			flex-direction: column;
			margin-left: 0;
			width: 100%;
			gap: 0;
		}

		.cta-call,
		.cta-quote {
			padding: 1rem !important;
			border-top: 1px solid rgba(var(--gray-light), 1);
			width: 100%;
			text-align: center;
			border-radius: 0 !important;
		}

		.logo {
			gap: 0.5rem;
		}

		.logo-image {
			height: 32px;
		}

		h2 {
			font-size: 1.3em;
		}
		
		.internal-links a {
			padding: 1rem;
			border-top: 1px solid rgba(var(--gray-light), 1);
			width: 100%;
			text-align: center;
		}
		
		.internal-links.expanded {
			display: flex;
		}
		
		nav {
			padding: 0.8rem 0;
			position: relative;
		}
		
		/* Animation for the hamburger menu */
		.mobile-menu-toggle.active span:first-child {
			transform: rotate(45deg) translate(5px, 6px);
		}
		
		.mobile-menu-toggle.active span:nth-child(2) {
			opacity: 0;
		}
		
		.mobile-menu-toggle.active span:last-child {
			transform: rotate(-45deg) translate(5px, -6px);
		}
	}
</style>

<script>
	// Mobile menu toggle functionality
	document.addEventListener('DOMContentLoaded', function() {
		const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
		const menuLinks = document.getElementById('menu-links');
		
		if (mobileMenuToggle) {
			mobileMenuToggle.addEventListener('click', function() {
				menuLinks.classList.toggle('expanded');
				mobileMenuToggle.classList.toggle('active');
			});
		}
		
		// Close menu when clicking on a link
		const navLinks = document.querySelectorAll('.internal-links a');
		navLinks.forEach(link => {
			link.addEventListener('click', function() {
				if (window.innerWidth <= 720) {
					menuLinks.classList.remove('expanded');
					mobileMenuToggle.classList.remove('active');
				}
			});
		});
		
		// Close menu when clicking outside
		document.addEventListener('click', function(e) {
			if (window.innerWidth <= 720 && 
				!mobileMenuToggle.contains(e.target) && 
				!menuLinks.contains(e.target) &&
				menuLinks.classList.contains('expanded')) {
				menuLinks.classList.remove('expanded');
				mobileMenuToggle.classList.remove('active');
			}
		});
	});
</script>