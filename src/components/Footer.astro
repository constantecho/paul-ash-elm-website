---
import { SITE_DATA } from '../consts';
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="footer-logo">
			<img src="/logo.png" alt="Ash & Elm Contracting" class="footer-logo-image" />
			<h3>{SITE_DATA.name}</h3>
			<p>{SITE_DATA.tagline}</p>
		</div>
		
		<div class="footer-links">
			<div class="link-group">
				<h4>Pages</h4>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/services">Services</a></li>
					<li><a href="/contact">Contact</a></li>
				</ul>
			</div>

			<div class="link-group">
				<h4>Contact Info</h4>
				<ul>
					<li><a href={`tel:${SITE_DATA.phone.raw}`}>{SITE_DATA.phone.display}</a></li>
					<li><a href={`mailto:${SITE_DATA.email}`}>{SITE_DATA.email}</a></li>
					<li>{SITE_DATA.address.city}, {SITE_DATA.address.province}</li>
				</ul>
			</div>

			<div class="link-group">
				<h4>Service Area</h4>
				<ul>
					{SITE_DATA.serviceArea.map(area => (
						<li>{area}</li>
					))}
				</ul>
			</div>
		</div>
	</div>
	
	<div class="footer-bottom">
		<p>&copy; {today.getFullYear()} {SITE_DATA.name}. All rights reserved.</p>
		<p class="business-info">Fully Insured • GST: {SITE_DATA.gst} • Payments: {SITE_DATA.paymentMethods.join(', ')}</p>
	</div>
</footer>

<style>
	footer {
		padding: 4rem 1rem 2rem 1rem;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray-dark));
	}
	
	.footer-content {
		max-width: 1080px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		flex-wrap: wrap;
		gap: 2rem;
	}
	
	.footer-logo {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 0.5rem;
	}

	.footer-logo-image {
		height: 48px;
		width: auto;
	}

	.footer-logo h3 {
		margin: 0;
		font-size: 1.8rem;
		color: var(--green-700);
	}
	
	.footer-logo p {
		margin-top: 0.5rem;
		opacity: 0.8;
	}
	
	.footer-links {
		display: flex;
		gap: 4rem;
	}
	
	.link-group h4 {
		margin-top: 0;
		font-size: 1.1rem;
	}
	
	.link-group ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.link-group li {
		margin-bottom: 0.7rem;
	}
	
	.link-group a {
		color: rgb(var(--gray-dark));
		text-decoration: none;
		transition: color 0.2s ease;
	}
	
	.link-group a:hover {
		color: var(--primary);
	}
	
	.footer-bottom {
		max-width: 1080px;
		margin: 3rem auto 0;
		padding-top: 1.5rem;
		border-top: 1px solid rgba(var(--gray), 0.3);
		text-align: center;
		font-size: 0.9rem;
		opacity: 0.8;
	}

	.business-info {
		margin-top: 0.5rem;
		font-size: 0.8rem;
		color: var(--green-700);
		font-weight: 500;
	}
	
	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			gap: 2rem;
		}
		
		.footer-links {
			width: 100%;
			justify-content: space-between;
			gap: 1rem;
		}
	}
</style>